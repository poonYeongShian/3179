{
    "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
    "title":"EV charging points, 2021",
    "background":"#fff",
    "description":"A simple radial chart with embedded data.",
    "width":250,
    "height":200,
    "data":{
       "url":"https://raw.githubusercontent.com/poonYeongShian/FIT3179/main/Visualization2/data/IEA-EV-dataEV-charging-pointsHistoricalEV.csv"
    },
    "params": [
      {
         "name":"powertrain_type_selection",
         "bind": {
            "input": "select",
            "options": [null,"Publicly available fast","Publicly available slow"],
            "labels": ["Show all","Fast","Slow"],
            "name": "Charging Point Type: "
         }
      }
   ],
   "transform": [
      {
         "filter": "powertrain_type_selection == null || datum.powertrain == powertrain_type_selection"
      },
      {
         "aggregate": [{"op": "sum", "field": "value", "as": "sum_value"}],
         "groupby": ["region"]
      },
      {
         "window": [{
             "op": "sum",
             "field": "sum_value",
             "as": "total"
         }],
         "frame": [null, null]
       },
      {"calculate": "datum.sum_value / datum.total * 100", "as": "percentage"}
  
   ],
    "layer":[
       {
          "mark":{
             "type":"arc",
             "innerRadius":20,
             "stroke":"#fff",
             "yOffset":-2
          }
       },
       {
          "mark":{
             "type":"text",
             "radiusOffset":10,
             "fontSize":15
          },
          "encoding":{
             "text":{
                "field":"percentage",
                "type":"quantitative",
                "format" : ".1d" 
             }
          }
       }
    ],
    "encoding":{
       "theta":{
          "field":"sum_value",
          "type":"quantitative",
          "stack":true
       },
       "radius":{
          "field":"sum_value",
          "type":"quantitative",
          "scale":{
             "type":"sqrt",
             "zero":true,
             "rangeMin":20
          }
       },
       "color":{
          "title":"Country",
          "field":"region",
          "type":"nominal",
          "scale":{
              "range":[
                  "#44aa99",
                  "#ee6677",
                  "#bbbbbb",
                  "#aa3377",
                  "#66ccee",
                  "#ccbb44",
                  "#4477aa"
              ]
          }
       },
       "tooltip":[
          {
             "field":"region",
             "type":"nominal",
             "title":"Country"
          },
          {
             "field":"sum_value",
             "type":"quantitative",
             "title":"Total Charging Point"
          },
          {
             "field":"percentage",
             "type":"quantitative",
             "title":"Percentage (%)",
             "format" : ".1d" 
          }
       ]
    },
    "view":{
       "stroke":null
    },
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "legend": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "header": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "title": {
        "font": "Oxygen",
        "fontSize": 16,
        "fontWeight": 600
      }
    }
 }